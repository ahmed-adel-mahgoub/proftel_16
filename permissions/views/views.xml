<odoo>
    <record id="view_permissions_form" model="ir.ui.view">
        <field name="name">permissions.form</field>
        <field name="model">permissions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_permissions" model="ir.actions.act_window">
        <field name="name">Permissions</field>
        <field name="res_model">permissions</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new permissions
            </p>
        </field>
    </record>

    <!-- Menu Item under HR -->
    <menuitem
            id="menu_permissions_root"
            name="Permissions"
            parent="hr.menu_hr_root"
            action="action_permissions"
            sequence="100"
    />
</odoo>